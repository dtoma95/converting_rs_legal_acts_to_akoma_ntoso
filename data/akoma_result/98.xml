										<num>(4)</num>
										<content>
											<p> мермерисани кречњак 24,00 динара;</p>
										</content>
									</item>
									<item id="clan3-stav1-tac1-podtac5">
										<num>(5)</num>
										<content>
											<p> мермерисани доломит 24,00 динара;</p>
										</content>
									</item>
